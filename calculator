    </div></div></pre>
    <script>
    const display = document.getElementById("two");
    const buttons = document.querySelectorAll(".key");

    let currentValue = "";
    let operatorUsed = false;

    buttons.forEach(button => {
        button.addEventListener("click", () => {
            let value = button.innerText;

            
            if (value === "C") {
                currentValue = "";
                display.innerText = "0";
                operatorUsed = false;
                return;
            }

            
            if (value === "⌫") {
                currentValue = currentValue.slice(0, -1);
                display.innerText = currentValue || "0";
                return;
            }

            
            if (value === "=") {
                try {
                    let result = eval(
                        currentValue
                            .replace("×", "*")
                            .replace("÷", "/")
                            .replace("−", "-")
                    );
                    display.innerText = result;
                    currentValue = result.toString();
                } catch {
                    display.innerText = "Error";
                    currentValue = "";
                }
                return;
            }

            
            if ("+−×÷%".includes(value)) {
                if (operatorUsed) return;
                operatorUsed = true;
            } else {
                operatorUsed = false;
            }
            currentValue += value;
            display.innerText = currentValue;
        });
    });
</script>


    </body></html>
